generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {

  id  String @id @default(cuid())
  telegramId  BigInt   @unique
  publicKey   String
  encryptedPrivateKey  String

  LaunchedTokens      LaunchedToken[] @relation("UserLaunchedTokens")
  CreatedPools        CreatedPool[] @relation("UserCreatedPools")
  CreatedAMMPools     CreatedAMMPool[]  @relation("UserCreatedAMMPools")
  CreatedPositions    CreatedPosition[]
  MintedTokens        MintedToken[] @relation("UserMintedTokens")
  LaunchedSPLTokens      LaunchedSPLToken[] @relation("UserLaunchedSPLTokens")
  MintedSPLTokens        MintedSPLToken[] @relation("UserMintedSPLTokens")

}

model LaunchedToken {
  id           String   @id @default(cuid())
  telegramId   BigInt
  mintAddress  String   @unique
  name         String
  symbol       String
  decimals     Int
  tokenProgram String

  user         User     @relation("UserLaunchedTokens", fields: [telegramId], references: [telegramId])

  @@unique([telegramId, name])
}

model LaunchedSPLToken {
  id           String   @id @default(cuid())
  telegramId   BigInt
  mintAddress  String   @unique
  name         String
  symbol       String
  decimals     Int
  tokenProgram String

  user         User     @relation("UserLaunchedSPLTokens", fields: [telegramId], references: [telegramId])

  @@unique([telegramId, name])
}

model MintedToken {

  id            String    @id @default(cuid())
  telegramId    BigInt
  mintAddress   String    @unique
  name          String
  symbol        String
  decimals      Int
  tokenProgram  String

  user         User     @relation("UserMintedTokens", fields: [telegramId], references: [telegramId])

  @@unique([telegramId, name]) 
}

model MintedSPLToken {

  id            String    @id @default(cuid())
  telegramId    BigInt
  mintAddress   String    @unique
  name          String
  symbol        String
  decimals      Int
  tokenProgram  String

  user         User     @relation("UserMintedSPLTokens", fields: [telegramId], references: [telegramId])

  @@unique([telegramId, name]) 
}

model CreatedPool {
  id              String   @id @default(cuid())
  telegramId      BigInt
  pairAddress     String   @unique
  tokenX          String
  tokenXDecimals  Int
  tokenY          String
  tokenYDecimals  Int
  activeBin       Int
  binStep         Int
  binArrayLower   String
  binArrayUpper   String
  hooksConfig     String
  ratePrice       Int?

  user            User     @relation("UserCreatedPools", fields: [telegramId], references: [telegramId])
  positions       CreatedPosition[]
}

model CreatedAMMPool {

  id              String    @id @default(cuid())
  telegramId      BigInt
  pairAddress     String    @unique
  lpTokenMint     String
  tokenX          String
  tokenXDecimals  Int
  tokenY          String
  tokenYDecimals  Int
  feeAccount      String

  user            User  @relation("UserCreatedAMMPools", fields: [telegramId], references: [telegramId])

}

model CreatedPosition {
  id            String   @id @default(cuid())
  telegramId    BigInt
  pairAddress   String
  positionMint  String   @unique
  lowerBin      Int
  upperBin      Int

  // Relations
  user          User         @relation(fields: [telegramId], references: [telegramId])
  pool          CreatedPool  @relation(fields: [pairAddress], references: [pairAddress])

  @@index([telegramId])
  @@index([pairAddress])
}