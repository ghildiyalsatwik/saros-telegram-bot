generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {

  id  String @id @default(cuid())
  telegramId  BigInt   @unique
  publicKey   String
  encryptedPrivateKey  String

  MintedTokens        MintedToken[] @relation("UserLaunchedTokens")
  CreatedPools        CreatedPool[] @relation("UserCreatedPools")

}

model MintedToken {
  id           String   @id @default(cuid())
  telegramId   BigInt
  mintAddress  String   @unique
  name         String
  symbol       String
  decimals     Int
  tokenProgram String

  user         User     @relation("UserLaunchedTokens", fields: [telegramId], references: [telegramId])

  @@unique([telegramId, name])
}

model CreatedPool {
  id              String   @id @default(cuid())
  telegramId      BigInt
  pairAddress     String   @unique
  tokenX          String
  tokenXDecimals  Int
  tokenY          String
  tokenYDecimals  Int
  activeBin       Int
  binStep         Int
  binArrayLower   String
  binArrayUpper   String
  hooksConfig     String
  ratePrice       Int?

  user            User     @relation("UserCreatedPools", fields: [telegramId], references: [telegramId])
}