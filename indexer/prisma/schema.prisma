generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Subscription {
  id               BigInt   @id @default(autoincrement())
  telegram_user_id BigInt
  pool_pubkey      String   @db.VarChar(44)

  /// last bin this user was notified about
  last_active_bin  Int

  created_at       DateTime @default(now())
  updated_at       DateTime @updatedAt

  @@unique([telegram_user_id, pool_pubkey])
  @@index([pool_pubkey])
}

model PoolState {
  pool_pubkey String  @id @db.VarChar(44)
  active_bin  Int
  last_slot   BigInt
  updated_at  DateTime @updatedAt
}


